<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.gr.qrapi.core.model.AlertProfile" table="qr_alert_profile">
        <id name="id" type="int">
            <column name="profile_id" />
            <generator class="assigned" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="profile_name" />
        </property>
        <many-to-one name="account" class="com.gr.qrapi.core.model.Account" fetch="join" not-null="true" update="false" insert="false">
            <column name="account_id" />
        </many-to-one>
        <bag name="locations" inverse="true" table="qr_alert_location" lazy="true" >
            <key not-null="true">
                <column name="profile_id" />
            </key>
<!--             <list-index></list-index> -->
            <one-to-many class="com.gr.qrapi.core.model.AlertLocation" />
        </bag>
    </class>
</hibernate-mapping>
