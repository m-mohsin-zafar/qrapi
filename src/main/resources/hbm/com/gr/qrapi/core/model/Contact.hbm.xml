<!-- 			table="qr_contact_address" lazy="true"> -->
<!-- 			<key> -->
<!-- 				<column name="contact_id" /> -->
<!-- 			</key> -->
<!-- 			 <list-index></list-index> -->
<!-- 			<one-to-many -->
<!-- 				class="com.gr.qrapi.core.model.ContactAddress" /> -->
<!-- 		</bag> -->
	</class>
</hibernate-mapping>
